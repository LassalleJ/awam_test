{% extends 'base.html.twig' %}

{% block title %}Currency index{% endblock %}

{% block body %}
    <div class="container col-9 mt-5">
        <h1 class="text-center mb-3">Liste des devises</h1>
    </div>
    <div class="bloc-wrapper container col-9">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Code</th>
                <th>Drapeau</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for currency in currencies %}
            <tr>
                <td>{{ currency.id }}</td>
                <td>{{ currency.name }}</td>
                <td>{{ currency.code }}</td>
                <td><img src="{{ asset('build/images/'~currency.flag) }}" alt="" height="30" width="40"></td>
                <td>
                    <a class="btn btn-info" href="{{ path('app_currency_edit', {'id': currency.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <a class="btn btn-primary" href="{{ path('app_convert') }}">Retour</a>
        <a class="btn btn-success" href="{{ path('app_currency_new') }}">Ajouter une devise</a>
</div>


{% endblock %}
